<!DOCTYPE html>
  <html>
    <head>
      <title>Bookers</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <header>
      <div class="container">
        <div class="row">
          <div id="slidemenu">
            <% if user_signed_in? %>
            <ul class="nav-list">
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", user_path(current_user.id) %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to "Users", users_path %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-book" aria-hidden="true"></span><%= link_to "Books", books_path %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "Logout", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
              <% else %>
              <ul class="nav-list">
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", "/" %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-link" aria-hidden="true"></span><%= link_to "About", home_about_path %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to "sign up", new_user_registration_path %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span><%= link_to "log in", new_user_session_path %>
              </li>
          <% end %>
        </ul>
      </div>
    </header>

      <%= yield %>

      <footer class="footer style">
        <div class="container">
          <div class="row">
            <p class="text-right">CopyRight Infratop.inc</p>
      </footer>
    </body>
  </html>
