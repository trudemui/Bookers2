<p id="notice"><%= notice %></p>
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/list', user: @book.user, book: @book2 %>
	<h1>book detail</h1>
	<div class="container">
		<div class="row">
			<div class="col-lg-9">
						<table class="table table-striped">
							<tbody>
								<tr>
									<td><%= link_to user_path(@book.user) do  %>
										<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no-image.jpg", size:"60x60" %><br>
										<%= @book.user.name %></td>
										<% end %>
									<td><%= link_to @book.title, book_path(@book) %></td>
									<td><%= @book.body %></td>
									<% if @book.user == current_user %>
									<%= link_to "edit", edit_book_path(@book) %>
									<%= link_to "destroy", book_path(@book), method: :delete %>
									<% end %>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>