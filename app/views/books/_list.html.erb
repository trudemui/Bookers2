
<div class="container">
	<h3>User info</h3>
		<%= attachment_image_tag user, :profile_image, :fill, 60,60, format: 'jpeg', fallback: "no-image.jpg" %>
		<h4>name</h4>
		<%= user.name %>
		<h4>introduction</h4>
		<%= user.introduction %>
		<p><%= link_to "編集", edit_user_path(user), class: "btn btn-default" %></p>

	<h3>New book</h3>
		<%= form_for(book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>
		<h4>Opinion</h4>
		<%= f.text_area :body %><br/>
		<%= f.submit 'createbook', class: "btn btn-default" %>
		<% end %>
</div>