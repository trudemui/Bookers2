<%= flash[:notice] %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li>error</li>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="col-lg-6 col-lg-offset-3">
<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
	<div class="field row">
		<h4>Title</h4>
		<%= f.text_field :title, class: "col-xs-10 book_title" %>
	</div>

	<div class="field row">
		<h4>Opinion</h4>
		<%= f.text_area :body, class: "col-xs-10 book_body" %>
	</div>

	<div class="actions row"><br/>
		<%= f.submit 'Update Book', class: "btn btn-primary col-xs-10" %>
	</div>
<% end %>
<br>
  <p>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
  </p>
</div>