<%= flash[:notice] %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li>error</li>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<div class="action"><br/>
<%= f.submit 'Update Book' %>
</div>
<% end %>